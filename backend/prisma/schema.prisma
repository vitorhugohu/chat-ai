generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String @db.VarChar(100)

  chats Chat[]
}

model Chat {
  id Int @id @default(autoincrement())
  userId Int
  message String @db.VarChar(1000)
  

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
}